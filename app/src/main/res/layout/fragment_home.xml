            <AutoCompleteTextView
                android:id="@+id/autocomplete_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:background="@drawable/edit_text_bg_grey"
                android:drawableStart="@drawable/baseline_search_24"
                android:drawablePadding="8dp"
                android:hint="Search"
                android:layout_marginEnd="10dp"
                android:inputType="text"
                android:imeOptions="actionSend"
                android:padding="14dp"
                />

            <ImageView
                android:id="@+id/search_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/search" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Top Catagories"
                android:textStyle="bold"
                android:textAppearance="@style/new_here_re"
                android:textSize="21dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_3">

            <LinearLayout
                android:id="@+id/llmen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/img_virat"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Men"
                    android:textAppearance="@style/top_cat_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llwomen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/women_category"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Women"
                    android:textAppearance="@style/top_cat_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lltoys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/img_real_toy"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Toys"
                    android:textAppearance="@style/top_cat_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llbags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/img_real_bag"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Bags"
                    android:textAppearance="@style/top_cat_text" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_4">

            <LinearLayout
                android:id="@+id/llpainting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/img_painting"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Painting"
                    android:textAppearance="@style/top_cat_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llhomedecore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/img_real_home"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:text="Home Decor"
                    android:textAppearance="@style/top_cat_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llpottery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/img_real_pot"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Pottery"
                    android:textAppearance="@style/top_cat_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llother"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/img_other"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Other"
                    android:textAppearance="@style/top_cat_text" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="All products"
                android:textStyle="bold"
                android:textAppearance="@style/new_here_re"
                android:textSize="21dp" />

            <TextView
                android:id="@+id/all_product_view_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="View All"
                android:textColor="@color/dark_orange"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_6">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llartpeice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="185dp"
                        android:layout_gravity="center"
                        android:src="@drawable/painting" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="4"
                            android:maxLength="25"
                            android:layout_marginEnd="5dp"
                            android:textSize="18sp"
                            android:text="Art Piece"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textAppearance="@style/top_cat_text" />


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_weight="1"
                            android:layout_height="30dp"
                            android:src="@drawable/wishlist"/>
                    </LinearLayout>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="5dp"
                        android:text="Multicolor Aluminium Square African Modern Art Canvas Painting, Size: 24 X 24 Inches"

                        android:textColor="@color/grey"
                        android:layout_marginStart="5dp"
                        android:maxLines="2"
                        android:ellipsize="end"

                        android:textAppearance="@style/top_cat_text" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="5dp"
                        android:text="₹13499"
                        android:maxLength="10"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        android:textAppearance="@style/top_cat_text" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llpot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="185dp"
                        android:layout_gravity="center"
                        android:src="@drawable/pot" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="4"
                            android:maxLength="25"
                            android:layout_marginEnd="5dp"
                            android:textSize="18sp"
                            android:text="Artistic Pot"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textAppearance="@style/top_cat_text" />


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_weight="1"
                            android:layout_height="30dp"
                            android:src="@drawable/wishlist"/>
                    </LinearLayout>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="5dp"
                        android:text="Flower Pot- Ceramic Pot- Original and hand crafted  work"

                        android:textColor="@color/grey"
                        android:layout_marginStart="5dp"
                        android:maxLines="2"
                        android:ellipsize="end"

                        android:textAppearance="@style/top_cat_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:maxLength="10"
                        android:text="₹2799"
                        android:textAppearance="@style/top_cat_text"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lltoyhorse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="185dp"
                        android:layout_gravity="center"
                        android:src="@drawable/toy_horse" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="4"
                            android:maxLength="25"
                            android:layout_marginEnd="5dp"
                            android:textSize="18sp"
                            android:text="Toy Horse"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textAppearance="@style/top_cat_text" />


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_weight="1"
                            android:layout_height="30dp"
                            android:src="@drawable/wishlist"/>
                    </LinearLayout>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="5dp"
                        android:text="Toy for todlers"

                        android:textColor="@color/grey"
                        android:layout_marginStart="5dp"
                        android:maxLines="2"
                        android:ellipsize="end"

                        android:textAppearance="@style/top_cat_text" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="5dp"
                        android:text="₹599"
                        android:maxLength="10"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        android:textAppearance="@style/top_cat_text" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lljutebag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="185dp"
                        android:layout_gravity="center"
                        android:src="@drawable/jute_bag" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="4"
                            android:maxLength="25"
                            android:layout_marginEnd="5dp"
                            android:textSize="18sp"
                            android:text="Jute Bag"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textAppearance="@style/top_cat_text" />


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_weight="1"
                            android:layout_height="30dp"
                            android:src="@drawable/wishlist"/>
                    </LinearLayout>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="5dp"
                        android:text="Bag for daily use made up of jute"

                        android:textColor="@color/grey"
                        android:layout_marginStart="5dp"
                        android:maxLines="2"
                        android:ellipsize="end"

                        android:textAppearance="@style/top_cat_text" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="5dp"
                        android:text="₹249"
                        android:maxLength="10"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        android:textAppearance="@style/top_cat_text" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
