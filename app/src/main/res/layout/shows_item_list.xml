<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    
    <ImageView
        android:id="@+id/show_image"
        android:layout_width="150dp"
        android:layout_height="225dp"
        android:src="@drawable/app_logo"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/show_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wed, 6 Sept"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:background="#333333"
        android:textSize="16sp"/>
    
    <TextView
        android:id="@+id/show_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Jo Bolta Hai Wohi Hota Hai Ft. Harsh Gujral in the house"
        android:ellipsize="end"
        android:paddingHorizontal="4dp"
        android:paddingTop="3dp"
        android:fontFamily="@font/poppins_bold"
        android:textSize="15sp"
        android:textStyle="normal"
        android:textColor="#333333"
        android:maxLines="2"/>
    <TextView
        android:id="@+id/show_venue"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="The Laugh Store: Venue"
        android:ellipsize="end"
        android:paddingHorizontal="4dp"
        android:fontFamily="@font/poppins_light"
        android:textSize="15sp"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/ticket_price"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="â‚¹699 onwards"
        android:ellipsize="end"
        android:paddingHorizontal="4dp"
        android:fontFamily="@font/poppins_light"
        android:textSize="15sp"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:maxLines="1"
        tools:ignore="HardcodedText" />

</LinearLayout>